{
  "compilerOptions": {
    "sourceMap": true,
    "strict": false,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "jsx": "preserve",
    "lib": ["es5", "es6", "dom", "es2019"],
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@common/*": ["common/*"],
      "@ssr/*": ["ssr/*"],
      "@spa/*": ["spa/*"],
      "@b-blog/*": ["spa/b-blog/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["next-env.d.ts", "global.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "ssr", "server", "app/public", "app/views"]
}
